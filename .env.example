# Trading Agent with MCPs - Environment Configuration Template
# Copy this file to .env and add your actual API keys

# 🤖 OpenAI Configuration (Required)
# Get your API key from: https://platform.openai.com/account/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# 📊 Market Data APIs (Required)
# Get your API key from: https://polygon.io/dashboard/api-keys
POLYGON_API_KEY=your_polygon_api_key_here
# Get your API key from: https://api.tiingo.com/
TIINGO_API_KEY=your_tiingo_api_key_here

# 🔍 Research & News APIs (Required)
# Get your API key from: https://api.search.brave.com/
BRAVE_API_KEY=your_brave_search_api_key_here

# 📱 Push Notifications (Optional)
# Get your credentials from: https://pushover.net/
PUSHOVER_USER_KEY=your_pushover_user_key_here
PUSHOVER_APP_TOKEN=your_pushover_app_token_here

# ⚙️ Trading Configuration
# Trading frequency in minutes (1440 = daily, 60 = hourly, 0.167 = every 10 seconds for testing)
RUN_EVERY_N_MINUTES=60
# Set to true to trade even when market is closed (useful for testing)
RUN_EVEN_WHEN_MARKET_IS_CLOSED=false

# 🗄️ Database Configuration
DATABASE_PATH=trading_agent.db

# 🌐 Server Configuration
DASHBOARD_PORT=7860
DASHBOARD_HOST=127.0.0.1

# 🔧 Development Settings
DEBUG=false
LOG_LEVEL=INFO
